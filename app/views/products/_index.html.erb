<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %></td>
    <td><%= link_to "Show", product_path(product), class: "btn" %></td>
    <td><%= link_to "Delete", product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
